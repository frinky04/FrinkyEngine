<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageVersion>1.0.0</PackageVersion>
    <PackageId>FrinkyEngine.Templates</PackageId>
    <Title>FrinkyEngine Game Templates</Title>
    <Description>Templates for creating FrinkyEngine game projects</Description>
    <TargetFramework>net8.0</TargetFramework>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <NoDefaultExcludes>true</NoDefaultExcludes>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="..\ProjectTemplates\**\content\**\*" Exclude="..\ProjectTemplates\**\content\**\bin\**;..\ProjectTemplates\**\content\**\obj\**" />
  </ItemGroup>

</Project>
